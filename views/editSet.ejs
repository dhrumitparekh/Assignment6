<!DOCTYPE html>
<html lang="en" data-theme="valentine">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css" />
</head>

<body tabindex="-1">
    <%- include('partials/navbar', {page: '' }) %>

    <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center ">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold"><%= set.name %></h1>

            <form action="/lego/editSet" method="POST">
                <div class="mb-4">
                    <label for="name" class="block font-bold mb-2">Name:</label>
                    <input type="text" id="name" name="name" value="<%= set.name %>" required class="form-input w-full rounded border">
                </div>

                <div class="mb-4">
                    <label for="year" class="block font-bold mb-2">Year:</label>
                    <input type="number" id="year" name="year" value="<%= set.year %>" required class="form-input w-full rounded border">
                </div>

                <div class="mb-4">
                    <label for="num_parts" class="block font-bold mb-2">Number of Parts:</label>
                    <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" required class="form-input w-full rounded border">
                </div>

                <div class="mb-4">
                    <label for="img_url" class="block font-bold mb-2">Image URL:</label>
                    <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>" required class="form-input w-full rounded border">
                </div>

                <div class="mb-4">
                    <label for="theme_id" class="block font-bold mb-2">Theme:</label>
                    <select id="theme_id" name="theme_id" required class="form-select w-full rounded border">
                        <% themes.forEach(theme => { %>
                            <option value="<%= theme.id %>" <%= set.theme_id == theme.id ? 'selected' : '' %>><%= theme.name %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="mb-4">
                    <label for="set_num" class="block font-bold mb-2">Set Number:</label>
                    <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>" readonly class="form-input w-full rounded border cursor-not-allowed">
                </div>

                <div class="flex items-center justify-between gap-4">
            <button type="submit" class="btn btn-primary">Update Set</button>
            <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-error">Delete Set</a>
        </div>
   
            </form>
        </div>
    </div>
</body>
</html>